@model TextEditor.Models.Document

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete @Html.DisplayFor(model => model.Title)?</h3>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Yes" class="btn btn-danger" />
    <a class="btn btn-info ml-2" asp-action="Index">No</a>
</form>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            <textarea id="tiny" style="width: 60vw; height: 80vh" asp-for="Content"></textarea>
        </dd>
    </dl>
</div>
